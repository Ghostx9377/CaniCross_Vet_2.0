<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/canicross_bgop">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_certificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6B4A3A"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Certificaciones"
        app:navigationIcon="@drawable/ic_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextIdPerroCert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID del perro"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editTextIdDuenoCert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="ID del dueÃ±o"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_buscar_certificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_button"
                android:text="Buscar certificaciones"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#AAFFFFFF" />

            <TextView
                android:id="@+id/text_certificaciones_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Certificaciones encontradas"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_certificaciones_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ingresa los IDs para consultar."
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_certificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

